{
  "name": "asset_tracker_lite_contracts",
  "version": "0.0.7",
  "main": "lib/index.js",
  "types": "lib/src/index.d.ts",
  "license": "MIT",
  "scripts": {
    "test": "npx hardhat test",
    "copy-dts": "copyfiles -u 2 -s \"src/types/**/*.ts\" lib/types",
    "build:js": "babel src --out-dir lib --extensions \".ts,.tsx\" --source-maps inline --copy-files",
    "build:types": "tsc --emitDeclarationOnly",
    "build": "yarn build:types && yarn build:js",
    "contracts:clear": "rm -rf lib &&  rm -rf .openzeppelin && rm -rf ./cache && rm -rf ./src/artifacts && rm -rf ./src/types",
    "contracts:build": "yarn contracts:clear && npx hardhat compile",
    "prepublishOnly": "yarn contracts:build && yarn build && yarn copy-dts",
    "deploy:localhost": "yarn change-localhost-env && npx hardhat test src/scripts/deployment/deployment.test.ts",
    "deploy:std": "yarn change-std-env && npx hardhat run --network std ./src/scripts/deployment/deploy.ts",
    "change-std-env": "cp .env.std .env",
    "change-localhost-env": "cp .env.localhost .env"
  },
  "dependencies": {
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@babel/runtime": "^7.12.5",
    "@openzeppelin/contracts": "^4.8.1",
    "@openzeppelin/test-helpers": "^0.5.16",
    "@types/jest": "^29.2.3",
    "@uniswap/v2-core": "^1.0.1",
    "@uniswap/v2-periphery": "^1.1.0-beta.0",
    "axios": "^1.3.3",
    "dotenv": "^9.0.2",
    "ethers": "^5.7.2",
    "ethers-eip712": "^0.2.0",
    "jest": "^29.3.1",
    "json-format": "^1.0.1",
    "node-json-db": "^2.1.5",
    "prettier": "^2.2.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.3",
    "@babel/core": "^7.8.3",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "@babel/preset-typescript": "^7.8.3",
    "@commitlint/config-conventional": "^17.0.2",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.3",
    "@nomiclabs/hardhat-ethers": "^2.2.0",
    "@nomiclabs/hardhat-etherscan": "^3.0.3",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.3",
    "@types/chai": "^4.3.3",
    "@types/chai-arrays": "^2.0.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.7.14",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "buffer": "^6.0.3",
    "chai": "^4.3.6",
    "commitlint": "^17.0.2",
    "copyfiles": "^2.4.1",
    "eslint": "^8.18.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-standard": "^5.0.0",
    "eslint-plugin-vue": "^9.1.1",
    "ethereum-waffle": "^3.4.0",
    "hardhat": "^2.6.8",
    "hardhat-abi-exporter": "^2.10.1",
    "hardhat-contract-sizer": "^2.6.1",
    "husky": "^7.0.0",
    "lint-staged": "^13.0.2",
    "process": "^0.11.10",
    "typechain": "^8.1.0",
    "typescript": "^4.8.2",
    "web3-core": "^1.8.0"
  },
  "files": [
    "lib/**/*"
  ]
}
